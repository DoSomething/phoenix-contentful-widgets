{
  "name": "contentful-extension-css",
  "private": true,
  "version": "0.1.0",
  "description": "A CSS UI Extension widget for Contentful's Webb App",
  "author": "Diego Lorenzo",
  "license": "MIT",
  "main": "./src/app.js",
  "scripts": {
    "prebuild": "rimraf _build",
    "build": "webpack -p && npm run export",
    "build:dev": "webpack",
    "extension:create": "better-npm-run extension:create",
    "extension:update": "better-npm-run extension:update",
    "export": "mv _build/index.html ../docs/css-widget.html"
  },
  "betterScripts": {
    "extension:create": {
        "command": "contentful-extension create --space-id $SPACE_ID"
    },
    "extension:update": {
        "command": "contentful-extension update --space-id $SPACE_ID --force"
    }
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "better-npm-run": "0.0.13",
    "codemirror": "^5.22.0",
    "contentful-extension-cli": "^2.0.0",
    "css-loader": "^0.26.1",
    "ejs-loader": "^0.3.0",
    "html-webpack-inline-source-plugin": "0.0.5",
    "html-webpack-plugin": "^2.24.1",
    "node-sass": "^4.0.0",
    "path": "^0.12.7",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0-rc.1",
    "webpack-validator": "^2.3.0"
  },
  "dependencies": {
    "codemirror": "^5.21.0",
    "contentful-ui-extensions-sdk": "^3.1.0"
  }
}
